#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.


BUILDDIR = ./build

build: $(BUILDDIR)/build-stamp

-include debian/debiandirs

debian/debiandirs: admin/debianrules
	perl -w admin/debianrules echodirs > debian/debiandirs

$(BUILDDIR)/build-stamp:
	dh_testdir
	if test ! -f configure; then \
	  $(MAKE) -f admin/Makefile.common ;\
	fi 
	test -d $(BUILDDIR) || mkdir $(BUILDDIR) ;\
	cd $(BUILDDIR) ;\
	$$PWD/../configure $(configkde) \
	--libdir=/$(kde_libdir) --includedir=/$(kde_includedir)

	make -C $(BUILDDIR)

	touch $(BUILDDIR)/build-stamp

clean: debian-clean
	-rm -rf $(BUILDDIR)
	-rm -f debian/debiandirs
	dh_clean

debian-clean:
	dh_testdir
	-rm -f $(BUILDDIR)/build-stamp
	if test -d CVS; then \
	  make -f admin/Makefile.common cvs-clean ;\
	fi

binary-indep: build
	dh_testroot
	dh_testdir
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: build
	dh_testdir
	dh_testroot
	dh_clean -k
	-rm -f debian/undocumented
	make -C $(BUILDDIR) install DESTDIR=`pwd`/debian/tmp/
	perl -w admin/debianrules
	for i in `find debian/tmp/$(kde_bindir) | sed -e 's#^debian/tmp/$(kde_bindir)/##'  | grep -v "debian/tmp"`; do \
	  echo "$$i.1" >> debian/undocumented ;\
	done
	for i in `cat debian/undocumented.in | grep -v "#"`; do \
	  echo "$$i.1" >> debian/undocumented ; \
	done                                              
	dh_movefiles -pkoffice-dev $(kde_libdir)/*.a $(kde_includedir)
	dh_undocumented
	dh_installdocs
	dh_installmenu
	dh_installchangelogs
	dh_strip
	dh_perl
	-rm debian/tmp/usr/share/doc/kde/HTML/en/katabase/common
	cd debian/tmp/usr/share/doc/kde/HTML/en/katabase/ && ln -s ../common .
	-rm debian/tmp/usr/share/doc/kde/HTML/en/killustrator/common
	cd debian/tmp/usr/share/doc/kde/HTML/en/killustrator/ && ln -s ../common .
	-rm debian/tmp/usr/share/doc/kde/HTML/en/koffice/common
	cd debian/tmp/usr/share/doc/kde/HTML/en/koffice/ && ln -s ../common .
	-rm debian/tmp/usr/share/doc/kde/HTML/en/kpresenter/common
	cd debian/tmp/usr/share/doc/kde/HTML/en/kpresenter/ && ln -s ../common .
	-rm debian/tmp/usr/share/doc/kde/HTML/en/kspread/common
	cd debian/tmp/usr/share/doc/kde/HTML/en/kspread/ && ln -s ../common .
	-rm debian/tmp/usr/share/doc/kde/HTML/en/kword/common
	cd debian/tmp/usr/share/doc/kde/HTML/en/kword/ && ln -s ../common .
	dh_compress
	dh_fixperms
	dh_suidregister
	dh_makeshlibs 
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	perl -w admin/debianrules update
	dh_builddeb       	

# Below here is fairly generic really

binary:		binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean
