#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.

export DH_COMPAT=3

INSTALL_DIR = install -p -d -o root -g root -m 755
INSTALL_FILE = install -p -o root -g root -m 644
INSTALL_SCRIPT = install -p -o root -g root -m 755

tmp = debian/tmp
overrides = $(tmp)/usr/share/lintian/overrides
pixmaps = $(tmp)/usr/share/pixmaps

build: build-stamp

-include debian/debiandirs

debian/debiandirs: admin/debianrules
	perl -w admin/debianrules echodirs > debian/debiandirs

build-stamp:
	dh_testdir
	if test ! -f configure; then \
	  $(MAKE) -f admin/Makefile.common ;\
	fi 
	./configure $(configkde) \
	  --libdir=$(kde_libdir) --includedir=$(kde_includedir)
	$(MAKE) KDE_PLUGIN_DEBIAN="-module -no-undefined"
	touch build-stamp

clean: debian-clean
	-rm -f debian/debiandirs
	dh_clean

debian-clean:
	dh_testdir
	dh_testroot
	-rm -f build-stamp install-stamp
	if test -d CVS; then \
	  $(MAKE) -f admin/Makefile.common cvs-clean ;\
	fi
	-$(MAKE) distclean

install: install-stamp

install-stamp: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	$(INSTALL_DIR) $(overrides)
	$(INSTALL_FILE) debian/*.override $(overrides)
	-for i in `ls $(overrides)/`; do \
		mv $(overrides)/$$i \
		$(overrides)/`echo $$i | sed -e 's#.override##'`; \
	done

	$(INSTALL_DIR) $(pixmaps)
	$(INSTALL_FILE) debian/*.xpm $(pixmaps)

	$(MAKE) install DESTDIR=`pwd`/$(tmp)

	# Add "#!/usr/bin/perl" to the head of kprconverter.pl.
	echo "#!/usr/bin/perl -w" > $(tmp)/usr/bin/kprconverter.pl.new
	cat $(tmp)/usr/bin/kprconverter.pl >> $(tmp)/usr/bin/kprconverter.pl.new
	-mv $(tmp)/usr/bin/kprconverter.pl.new $(tmp)/usr/bin/kprconverter.pl
	-chmod 755 $(tmp)/usr/bin/kprconverter.pl

	perl -w admin/debianrules cleanup

	for i in `find debian/ -type l -name "common"`; do \
		rm $$i ;\
	done

	touch install-stamp
	
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_movefiles -i
	dh_installdocs -i
	dh_installmenu -i
	dh_installmime -i
	dh_installman -i
	dh_undocumented -i
	dh_installchangelogs -pkoffice
	dh_link -i
	dh_strip -i
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_perl -i
	dh_shlibdeps -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_movefiles -a
	dh_installdebconf -a
	dh_installdocs -a
	dh_installmenu -a
	dh_installmime -a
	dh_installman -a
	dh_undocumented -a
	dh_installchangelogs -pkoffice-libs
	dh_installchangelogs -pkoffice-dev
	dh_installchangelogs -pkchart kchart/CHANGES
	dh_installchangelogs -pkillustrator
	dh_installchangelogs -pkivio kivio/CHANGELOG
	dh_installchangelogs -pkoshell
	dh_installchangelogs -pkpresenter kpresenter/CHANGES
	dh_installchangelogs -pkrayon kimageshop/ChangeLog
	dh_installchangelogs -pkspread kspread/CHANGES
	dh_installchangelogs -pkugar kugar/ChangeLog
	dh_installchangelogs -pkword kword/CHANGES
	dh_link -a
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	-chmod 644 debian/kivio/usr/share/apps/kivio/autoloadStencils/*ksp
	# Leave debian/kpresenter/usr/bin/kprconverter.pl with execute perms.
	dh_makeshlibs -a -V
	dh_installdeb -a
	dh_perl -a
	dh_shlibdeps -a -l`pwd`/debian/koffice-libs/usr/lib
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

# Below here is fairly generic really

binary: binary-indep binary-arch
.PHONY: binary binary-arch binary-indep clean debian-clean build install
